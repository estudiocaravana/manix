    <Item es="Milmulleres" en="" gl="" prezo="5.70 €" />
    <Ingredientes es="Pollo, bacon, lomo, lechuga, tomate, cebolla y queso" en="" gl="" />
  </div>
  <div class="seccion">
    <Extra es="Patatas fritas" en="" gl="" prezo="3.00 €" />
    <Extra es="Ensalada" en="" gl="" prezo="4.00 €" />
