  </div>
  <div class="text-center pt-12 pb-24 lg:hidden">
    <a href="#inicio" class="underline">Volver arriba</a>
  </div>
  <div class="lg:col-span-2">
    <img src={padres} alt="abuela" class="block px-9 max-w-sm mx-auto" />
  </div>
</Layout>
