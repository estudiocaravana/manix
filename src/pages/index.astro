---
import Layout from "../layouts/Layout.astro";
import Tipo from "../components/Tipo.astro";
import Item from "../components/Item.astro";
import Extra from "../components/Extra.astro";
import Comentario from "../components/Comentario.astro";
import Ingredientes from "../components/Ingredientes.astro";
import abuela from "../assets/img/abuela.png";
import abuelasvg from "../assets/img/abuela.svg";
import padres from "../assets/img/padres.png";
---

<Layout title="Carta">
  <div id="inicio" class="text-center py-12">
    <div class="w-1 h-12 rounded bg-indigo-900 mx-auto mb-3"></div>
    Café<h1 class="text-5xl font-bold">MANIX</h1>1970
    <div class="w-1 h-12 rounded bg-indigo-900 mx-auto mt-3"></div>
    <div class="text-center leading-loose mt-3">
      <a class="anclas" href="#tapas">Tapas</a> · <a class="anclas" href="#desayunos">Desayunos</a> · <a class="anclas" href="#empanadillas">Empanadillas</a>
      <br /><a class="anclas" href="#hamburguesas">Hamburguesas</a> · <a class="anclas" href="#bocadillos">Bocadillos</a> · <a class="anclas" href="#perritos">Perritos</a>
      <br /><a class="anclas" href="#sandwich">Sandwich</a> · <a class="anclas" href="#postres">Postres</a>
    </div>
  </div>
  <img src={abuela} alt="abuela" class="block px-9 mx-auto max-w-sm mt-auto" />
  <div id="tapas" class="seccion">
    <Tipo title="Tapas" />
    <Item es="Tortilla" en="" gl="" prezo="0.80 €" />
