    <Item es="Solo" en="" gl="" prezo="2.80 €" />
    <Extra es="Extra" en="" gl="" prezo="0.50 €" />
  </div>
  <div id="sandwich" class="seccion">
    <Tipo title="Sandwich" />
    <Item es="Mixto" en="" gl="" prezo="2.50 €" />
