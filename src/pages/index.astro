    <Item es="Magdalenas tradicionales" en="" gl="" prezo="''" />
    <Item es="Donuts" en="" gl="" prezo="1.00 €" />
    <Item es="Croissants" en="" gl="" prezo="''" />
    <b class="block mt-6">Tostadas</b>
    <small class="block mb-1">Pan artesano o pan de molde</small>
    <Item es="Mantequilla y/o mermelada" en="" gl="" prezo="0.90 €" />
    <Item es="Aceite y tomate" en="" gl="" prezo="1.30 €" />
    <Item es="Jamón serrano" en="" gl="" prezo="1.60 €" />
    <Item es="Aguacate" en="" gl="" prezo="''" />
    <Item es="Miel" en="" gl="" prezo="''" />
    <Extra es="Extra" en="" gl="" prezo="0.20 €" />
  </div>
  <div id="empanadillas" class="seccion">
    <Tipo title="Empanadillas" />
