    <Extra es="Pan" en="" gl="" prezo="1.50 €" />
  </div>
  <div id="desayunos" class="seccion">
    <Tipo title="Desayunos" />
    <b class="block mb-1">Bollería</b>
    <Item es="Churros" en="" gl="" prezo="0.20 €" />
