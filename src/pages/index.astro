    <Item es="Pulpo" en="" gl="" prezo="''" />
    <Item es="Zamburiñas" en="" gl="" prezo="''" />
  </div>
  <div id="hamburguesas" class="seccion">
    <Tipo title="Hamburguesas" />
    <Comentario es="Mezcla casera de calidad 75% ternera, 25% cerdo" en="" gl="" />
